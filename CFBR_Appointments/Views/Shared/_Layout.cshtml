<body>

    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container">
                <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </a>
                @Html.ActionLink("Crossfit BR", "Index", new { controller = "Home" }, new { @class = "brand" })
                <div class="nav-collapse collapse">
                    <ul class="nav">
                        <li class="active">
                            <a href="@Url.HttpRouteUrl("Default", new { controller = "Account", action = "Logout" })">
                                <i class="icon-white icon-user"></i> Sign Out
                            </a>
                        </li>
                        @*<li><a href="#about">Schedule</a></li>*@
                    </ul>
                </div>
                <!--/.nav-collapse -->
            </div>
        </div>
    </div>

    <div class="container">
        @Html.Partial("Partials/_MessageBlock")

        @RenderBody()

        <footer>
            <p>&copy; Crossfit BR 2012</p>
        </footer>

    </div>
